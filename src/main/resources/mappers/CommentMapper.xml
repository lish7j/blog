<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tshaojl.blog.dao.CommentMapper">
    <resultMap id="Comment" type="com.tshaojl.blog.domain.Comment">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="content" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="vote_size" jdbcType="INT" property="voteSize"/>
        <association property="user" javaType="com.tshaojl.blog.domain.User">
            <id column="uid" property="id"/>
            <result column="avatar" property="avatar"/>
            <result column="email" property="email"/>
            <result column="name" property="name"/>
            <result column="password" property="password"/>
            <result column="username" property="username"/>
        </association>
        <collection property="votes" ofType="com.tshaojl.blog.domain.CommentVote">
            <id column="vid" property="id"/>
            <association property="user" javaType="com.tshaojl.blog.domain.User">
                <id column="uid" property="id"/>
                <result column="avatar" property="avatar"/>
                <result column="email" property="email"/>
                <result column="name" property="name"/>
                <result column="password" property="password"/>
                <result column="username" property="username"/>
            </association>
        </collection>
    </resultMap>


    <select id="findById" parameterType="java.lang.Integer" resultMap="Comment">
        select
        c.id, c.name, u.id as uid, u.avatar, u.email, u.name, u.password, u.username
        from catalog c, user u
        where c.user_id = #{id} and u.id = #{id}
    </select>


</mapper>